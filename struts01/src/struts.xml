<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
    <package name="com.ptl.action" namespace="/" extends="struts-default">
        <action name="*user" class="com.ptl.action.HelloAction" method="execute">
            <result type="redirect" name="success">
                /aa.jsp
            </result>
            <result type="dispatcher" name="error">
                /index.jsp
            </result>
        </action>
    </package>

</struts>
